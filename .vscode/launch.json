    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Application",
            "type": "cppdbg",
            "request": "launch",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/Build/",
            "environment": [],
            "program": "${workspaceFolder}/Build/Typoglycemia",
            "args": ["Hello,", "world!", "This", "is", "a", "test", "word:", "apple"],
            "linux": {
                "externalConsole": false,
            },
            "windows": {
                "type": "cppvsdbg",
                "program": "${workspaceFolder}/Build/Typoglycemia.exe",
                "console": "integratedTerminal",
                "args": ["Hello,", "world!", "This", "is", "a", "test", "word:", "apple"]
            }
        }
    ]
}
